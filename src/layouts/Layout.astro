---
// `title` is a value each page can pass in.
// Example:
// <Layout title="Home">
// This lets every page control the browser tab title.
const { title = "My Personal Site" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Basic metadata for browser behavior -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon shown in browser tabs -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />

    <!-- The page title shown in the browser tab -->
    <title>{title}</title>
  </head>

  <body>
    <!--
      This is your simple site-wide navigation.
      Because it lives in the shared layout, it appears on every page automatically.
    -->
    <nav>
      <a href="/">Home</a> |
      <a href="/projects">Projects</a> |
      <a href="/resume">Resume</a> |
      <a href="/photo">Fiji Blue Pearl</a> |
      <a href="/blog">Blog</a>
    </nav>

    <hr />

    <!--
      <slot /> is the most important layout concept in Astro:
      - The layout is the "frame"
      - Each page inserts its own content into this slot
    -->
    <main>
      <slot />
    </main>
  </body>
</html>
